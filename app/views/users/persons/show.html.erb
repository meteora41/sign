  <div class="container">

    <div class="ml-5 mt-4 " style= "color: lightgreen;">
      <%= flash[:notice] %>
    </div>
    
    <!--マイページ詳細-->
    <h3 class="ml-5 mt-5 mb-5 d-flex justify-content-center">
      <span style ="background-color:#00CC33; color:white" class="font-weight-bold">　<%= @person.user.name %> さんのマイページ　</span>
    </h3>

    <div class= "mr-5 d-flex justify-content-center">
    <table width="40%">
      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          ハンドルネーム :
        </th>
        <td style="font-size:20px; color:red;" width= "50%">
          <%= @person.handle %>
        </td>
      </tr>

      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          性別 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= @person.gender %>
        </td>
      </tr>

      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          年齢 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= @person.age %>
        </td>
      </tr>

      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          連絡先 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= @person.contact %>
        </td>
      </tr>

    </table>
    </div>
    <% if @person.user_id == current_user.id %>
      <div class= " ml-5 mt-4 pl-5 d-flex justify-content-center">
        <%= button_to "編集", edit_users_person_path, class: "btn btn-success mr-5", method: :get %>
      </div>
    <% end %>

    <!--自分の募集投稿一覧-->
    <h4 class="ml-5 mt-4 mb-5 pl-5">
      <span style ="background-color:#99CCFF; color:white" class="font-weight-bold">　投稿 一覧　</span>
    </h4>
    <table class="table text-center" style ="background-color:#D7EEFF; ">
      <thead>
        <tr>
          <th>　　　タイトル　　　</th>
          <th>　希望時間</th>
          <th>集合場所　</th>
        </tr>
      </thead>

      <tbody>
      <% @recruitings.each do |recruiting| %>
        <tr>
          <td>
            <%= link_to recruiting.title, "/users/recruitings/#{recruiting.id}" %>
          </td>
          <td>
            <%= recruiting.datetime %>
          </td>
          <td>
            <%= recruiting.place %>
          </td>
        </tr>
      </tbody>
      <%end %>
    </table>
    
    <div class= "ml-5 mt-3 mb-3 d-flex justify-content-center">
      <%= paginate @recruitings, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>