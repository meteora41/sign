  <div class="container">
    <h3 class="ml-5 mt-5 mb-5"> <%= @person.user.name %> さんのマイページ</h3>
    
    <table width="40%">
      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          ハンドルネーム : 
        </th>
        <td style="font-size:20px; color:red;" width= "50%">
          <%= @person.handle %>
        </td>
      </tr>
      
      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          性別 : 
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= @person.gender %>
        </td>
      </tr>
      
      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          年齢 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= @person.age %>
        </td>
      </tr>
      
      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          連絡先 : 
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= @person.contact %>
        </td>
      </tr>
      
    </table>
    
    <div class="text-center mt-1 mr-5 pr-5">
      <%= button_to "編集", edit_users_person_path, class: "btn btn-success mr-5", method: :get %>
    </div>

  

    <h4 class="ml-5 mt-5 mb-5">投稿 一覧</h4>
    <table class="table text-center">
      <thead>
        <tr>
          <th>　　　タイトル　　　</th>
          <th>　希望時間</th>
          <th>集合場所　</th>
        </tr>
      </thead>
  
      <tbody>
      <% @person.recruitings.each do |recruiting| %>
        <tr>
          <td>
            <%= link_to recruiting.title, "/users/recruitings/#{recruiting.id}" %>
          </td>
          <td>
            <%= recruiting.datetime %>
          </td>
          <td>
            <%= recruiting.place %>
          </td>
        </tr>
      </tbody>
    <%end %>
    </table>

  </div>