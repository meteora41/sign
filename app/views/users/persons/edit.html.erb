
  <div class="container">
    <h3 class="ml-5 mt-5 mb-4 d-flex justify-content-center">
      <span style ="background-color:#00CC33; color:white" class="font-weight-bold">　<%= @person.user.name %> さんのマイページ編集　</span>
    </h3>

    <div class="ml-5 mb-2 d-flex justify-content-center" style= "color: red;">
      <%= flash[:alert] %>
    </div>

    <!--編集情報-->
    <%= form_with model: @person, url: users_person_path do |f| %>
    <div class= "mr-5 mb-5 d-flex justify-content-center">
      <table width="40%" class="ml-3 mt-4">
        
        <tr align="right">
          <th style="font-size:20px; color:;" width="50%">
            ハンドルネーム :
          </th>
          <td style="font-size:20px; color:red;" width= "50%">
            <%= f.text_field :handle %>
          </td>
        </tr>

        <tr align="right">
          <th style="font-size:20px; color:;" width="50%">
            性別 :
          </th>
          <td style="font-size:20px; color:red;" width="50%">
            <%= f.text_field :gender %>
          </td>
        </tr>

        <tr align="right">
          <th style="font-size:20px; color:;" width="50%">
            年齢 :
          </th>
          <td style="font-size:20px; color:red;" width="50%">
            <%= f.text_field :age %>
          </td>
        </tr>

        <tr align="right">
          <th style="font-size:20px; color:;" width="50%">
            連絡先 :
          </th>
          <td style="font-size:20px; color:red;" width="50%">
            <%= f.text_field :contact %>
          </td>
        </tr>
      </table>
    </div>
    
      <% if @person.user_id == current_user.id %>
        <div class= " ml-5 mt-4 d-flex justify-content-center">
          <%= f.submit "保存", class: "btn btn-secondary" %>
        </div>
      <% end %>
    <% end %>
  </div>