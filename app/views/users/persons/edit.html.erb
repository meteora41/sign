
  <div class="container">
    <h3 class="ml-5 mt-5 mb-5"> <%= @person.user.name %> さんのマイページ編集</h3>
    <%= form_with model: @person, url: users_person_path do |f| %>

    <table width="40%" class="ml-3">
      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          ハンドルネーム :
        </th>
        <td style="font-size:20px; color:red;" width= "50%">
          <%= f.text_field :handle %>
        </td>
      </tr>

      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          性別 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= f.text_field :gender %>
        </td>
      </tr>

      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          年齢 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= f.text_field :age %>
        </td>
      </tr>

      <tr align="right">
        <th style="font-size:20px; color:;" width="50%">
          連絡先 :
        </th>
        <td style="font-size:20px; color:red;" width="50%">
          <%= f.text_field :contact %>
        </td>
      </tr>

    </table>
    <div class="text-center mt-1">
      <%= f.submit "保存" %>
    </div>
    <% end %>
  </div>