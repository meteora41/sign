
  <div class="container">
    <div class="mx-auto" style="width: 400px;">
      <h2 class="mt-5 pt-5 mb-5">ログイン画面へようこそ</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-4">
          メールアドレス　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-4 ml-4 mr-4 mb-2">
          パスワード　<%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
    　　　　　　<%= f.check_box :remember_me %>
          　<%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions ml-4">
  　　　　　　<%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  </div>
