
  <div class="container">
    <h3 class="ml-5 mt-5 mb-4 d-flex justify-content-center">投稿　編集</h3>

    <div class="ml-5 mb-2 pl-5 d-flex justify-content-center "style= "color: red;">
      <%= flash[:alert] %>
    </div>

    <%= form_with model: @recruiting, url: users_recruiting_path(@recruiting.id) do |f| %>

      <div class="field ml-5 mt-5 d-flex justify-content-center">
      <h4>タイトル:　</h4>
        <%= f.text_field :title %>
      </div>

      <div class="field ml-5 mt-4 d-flex justify-content-center">
        <h4>コメント:　　</h4>
        <%= f.text_area :comment %>
      </div>

      <div class="field ml-5 mt-4 d-flex justify-content-center">
        <h4>希望時間:　</h4>
        <%= f.text_field :datetime %>
      </div>

      <div class="field ml-5 mt-4 d-flex justify-content-center">
        <h4>集合場所:　</h4>
        <%= f.text_field :place %>
      </div>

      <div class="actions ml-5 mt-5 d-flex justify-content-center">
        <%= f.submit '保存' %>
      </div>
    <% end %>

  </div>