  <div class="container">
    <div class="mx-auto" style="width: 400px;">
      <h2 class="mt-5 pt-5 mb-5 ml-5 ">管理者　ログイン画面</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-4 d-flex justify-content-center">
          <h5>メールアドレス　</h5><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-4 ml-4 mr-4 mb-2 d-flex justify-content-center">
          <h5>　パスワード　　</h5><%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field ml-5 pl-5">
            　　<%= f.check_box :remember_me %>
            　<%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions ml-5 pl-5">
          　　　　<%= f.submit "ログイン" %>
        </div>
      <% end %>
      
    </div>
  </div>

